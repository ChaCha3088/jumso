pipeline {
    agent any

    stages {
        stage('Build Chat Module') {
            steps {
                script {
                    // Pull Main 안에 Chat 모듈로 이동
                    dir('../Pull Main/chat') {
                        // grant permission
                        sh 'chmod +x gradlew'

                        // build
                        sh './gradlew clean build'
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Chat 모듈 빌드가 성공했습니다.'

            // Chat 모듈 빌드 성공 시, Docker Image Chat 빌드
            build 'Build Docker Image Chat'
        }
        failure {
            echo 'Chat 모듈 빌드에 실패했습니다.'
        }
    }
}
